<Window x:Class="Proiect.AddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add New Record" Height="200" Width="400">
	<StackPanel Margin="10">
		<TextBlock Text="Nume Client:" />
		<TextBox Name="NumeClientTextBox" />

		<TextBlock Text="Suma:" Margin="0,10,0,0" />
		<TextBox Name="SumaTextBox" />

		<StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
			<Button Content="OK" Width="75" Margin="5" Click="OKButton_Click" />
			<Button Content="Cancel" Width="75" Margin="5" Click="CancelButton_Click" />
		</StackPanel>
	</StackPanel>
</Window>